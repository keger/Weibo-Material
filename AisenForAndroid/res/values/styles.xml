	<style name="UiBaseTheme.Light.Dialog" parent="android:style/Theme.Dialog">
		<item name="style_top_panel">@style/CustomDialogTopPanel</item>
		<item name="style_title">@style/CustomDialogTitle</item>
		<item name="style_divider_toppanel">@style/CustomDialogTopPanelDivider</item>
		<item name="style_txt_message">@style/CustomDialogMessage</item>
		<item name="style_button_panel">@style/CustomDialogButtonPanel</item>
